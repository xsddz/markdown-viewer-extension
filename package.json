{
  "name": "markdown-viewer-extension",
  "displayName": "Markdown Viewer",
  "version": "1.4.0",
  "description": "Markdown to perfect Word in one click â€” Mermaid, Graphviz, Vega, Infographic, LaTeX (editable), code highlighting, local processing",
  "type": "module",
  "main": "src/content.js",
  "scripts": {
    "build:chrome": "node chrome/build.js",
    "build:firefox": "node firefox/build.js",
    "build:mobile": "node mobile/build.js",
    "build:vscode": "node vscode/build.js",
    "app:init": "cd mobile && flutter pub get",
    "app:ios": "node mobile/build-app.js ios",
    "app:ios:sim": "node mobile/build-app.js ios:sim",
    "app:android": "node mobile/build-app.js android",
    "app:macos": "node mobile/build-app.js macos",
    "app:all": "node mobile/build-app.js all",
    "typecheck": "npx tsc --noEmit"
  },
  "keywords": [
    "markdown",
    "viewer",
    "chrome-extension",
    "syntax-highlighting",
    "mermaid",
    "katex",
    "math-formulas",
    "code-highlighting",
    "markdown-to-png",
    "svg-to-png",
    "github-flavored-markdown",
    "gfm",
    "markdown-parser",
    "unified",
    "remark",
    "rehype",
    "office-integration",
    "document-viewer",
    "technical-documentation",
    "chrome-manifest-v3"
  ],
  "author": {
    "name": "xicilion",
    "url": "https://github.com/xicilion"
  },
  "license": "ISC",
  "homepage": "https://github.com/xicilion/markdown-viewer-extension",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xicilion/markdown-viewer-extension.git"
  },
  "bugs": {
    "url": "https://github.com/xicilion/markdown-viewer-extension/issues"
  },
  "dependencies": {
    "@antv/infographic": "^0.2.2",
    "@viz-js/viz": "^3.24.0",
    "buffer": "^6.0.3",
    "d3-array": "^3.2.4",
    "docx": "^9.0.2",
    "esbuild": "^0.25.11",
    "eventemitter3": "^5.0.1",
    "katex": "^0.16.25",
    "mathjax-full": "^3.2.2",
    "mermaid": "^11.12.1",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vega": "^6.2.0",
    "vega-embed": "^7.1.0",
    "vega-interpreter": "^2.2.1",
    "vega-lite": "^6.4.1",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@anthropic-ai/bedrock-sdk": "^0.26.0",
    "@anthropic-ai/sdk": "^0.71.2",
    "@types/chrome": "^0.1.32",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.9.3",
    "webextension-polyfill": "^0.12.0"
  },
  "publisher": "xicilion",
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:mermaid",
    "onLanguage:vega",
    "onLanguage:graphviz",
    "onLanguage:infographic",
    "onLanguage:xml"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mermaid",
        "aliases": ["Mermaid", "mermaid"],
        "extensions": [".mermaid", ".mmd"],
        "icon": {
          "light": "icons/mermaid.svg",
          "dark": "icons/mermaid.svg"
        }
      },
      {
        "id": "vega",
        "aliases": ["Vega", "vega", "Vega-Lite", "vega-lite"],
        "extensions": [".vega", ".vl", ".vega-lite"],
        "icon": {
          "light": "icons/vega.svg",
          "dark": "icons/vega.svg"
        }
      },
      {
        "id": "graphviz",
        "aliases": ["GraphViz", "graphviz", "DOT", "dot"],
        "extensions": [".gv", ".dot"],
        "icon": {
          "light": "icons/graphviz.svg",
          "dark": "icons/graphviz.svg"
        }
      },
      {
        "id": "infographic",
        "aliases": ["Infographic", "infographic"],
        "extensions": [".infographic"],
        "icon": {
          "light": "icons/infographic.svg",
          "dark": "icons/infographic.svg"
        }
      }
    ],
    "commands": [
      {
        "command": "markdownViewer.preview",
        "title": "Open Markdown Preview (Advanced)",
        "category": "Markdown Viewer",
        "icon": "$(go-to-file)"
      },
      {
        "command": "markdownViewer.previewToSide",
        "title": "Open Markdown Preview to the Side (Advanced)",
        "category": "Markdown Viewer",
        "icon": "$(go-to-file)"
      },
      {
        "command": "markdownViewer.exportDocx",
        "title": "Export to DOCX",
        "category": "Markdown Viewer",
        "icon": "$(download)"
      },
      {
        "command": "markdownViewer.openSettings",
        "title": "Open Settings",
        "category": "Markdown Viewer",
        "icon": "$(gear)"
      },
      {
        "command": "markdownViewer.refresh",
        "title": "Refresh Preview",
        "category": "Markdown Viewer",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "markdownViewer.previewToSide",
          "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic",
          "group": "navigation"
        },
        {
          "command": "markdownViewer.exportDocx",
          "when": "activeWebviewPanelId == markdownViewerAdvanced",
          "group": "navigation@1"
        },
        {
          "command": "markdownViewer.openSettings",
          "when": "activeWebviewPanelId == markdownViewerAdvanced",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "command": "markdownViewer.preview",
          "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "markdownViewer.preview",
          "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic"
        },
        {
          "command": "markdownViewer.previewToSide",
          "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic"
        },
        {
          "command": "markdownViewer.exportDocx",
          "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Viewer",
      "properties": {
        "markdownViewer.theme": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "github-light",
            "github-dark",
            "academic",
            "minimal"
          ],
          "description": "Theme for the Markdown preview"
        },
        "markdownViewer.fontSize": {
          "type": "number",
          "default": 16,
          "minimum": 10,
          "maximum": 32,
          "description": "Base font size in pixels"
        },
        "markdownViewer.fontFamily": {
          "type": "string",
          "default": "",
          "description": "Font family for the preview (leave empty for default)"
        },
        "markdownViewer.lineNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Show line numbers in code blocks"
        },
        "markdownViewer.scrollSync": {
          "type": "boolean",
          "default": true,
          "description": "Synchronize scrolling between editor and preview"
        }
      }
    },
    "keybindings": [
      {
        "command": "markdownViewer.previewToSide",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic || resourceExtname == .svg"
      }
    ]
  },
  "icon": "icons/icon128.png"
}

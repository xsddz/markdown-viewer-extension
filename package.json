{
  "name": "markdown-viewer-extension",
  "displayName": "Markdown Viewer Extension",
  "version": "1.5.1",
  "description": "Markdown to perfect Word in one click â€” Mermaid, Graphviz, Vega, Infographic, LaTeX (editable), code highlighting, local processing",
  "type": "module",
  "scripts": {
    "chrome": "node chrome/build.js",
    "firefox": "node firefox/build.js",
    "mobile": "node mobile/build.js",
    "vscode": "node vscode/build.js",
    "app:init": "cd mobile && flutter pub get",
    "app": "node mobile/build-app.js all",
    "ios": "node mobile/build-app.js ios",
    "ios:sim": "node mobile/build-app.js ios:sim",
    "android": "node mobile/build-app.js android",
    "macos": "node mobile/build-app.js macos",
    "typecheck": "npx tsc --noEmit"
  },
  "keywords": [
    "markdown",
    "viewer",
    "chrome-extension",
    "syntax-highlighting",
    "mermaid",
    "katex",
    "math-formulas",
    "code-highlighting",
    "markdown-to-png",
    "svg-to-png",
    "github-flavored-markdown",
    "gfm",
    "markdown-parser",
    "unified",
    "remark",
    "rehype",
    "office-integration",
    "document-viewer",
    "technical-documentation",
    "chrome-manifest-v3"
  ],
  "author": {
    "name": "xicilion",
    "url": "https://github.com/xicilion"
  },
  "license": "ISC",
  "homepage": "https://github.com/xicilion/markdown-viewer-extension",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xicilion/markdown-viewer-extension.git"
  },
  "bugs": {
    "url": "https://github.com/xicilion/markdown-viewer-extension/issues"
  },
  "dependencies": {
    "@antv/infographic": "^0.2.7",
    "@trbn/jsoncanvas": "^1.0.6",
    "@viz-js/viz": "^3.24.0",
    "buffer": "^6.0.3",
    "d3-array": "^3.2.4",
    "docx": "^9.5.1",
    "esbuild": "^0.25.12",
    "eventemitter3": "^5.0.1",
    "katex": "^0.16.27",
    "markdownlint": "^0.40.0",
    "mathjax-full": "^3.2.2",
    "mermaid": "^11.12.2",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gemoji": "^8.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "roughjs": "^4.6.6",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vega": "^6.2.0",
    "vega-embed": "^7.1.0",
    "vega-interpreter": "^2.2.1",
    "vega-lite": "^6.4.1",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@anthropic-ai/bedrock-sdk": "^0.26.0",
    "@anthropic-ai/sdk": "^0.71.2",
    "@types/chrome": "^0.1.32",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.107.0",
    "@vscode/vsce": "^3.7.1",
    "knip": "^5.80.0",
    "typescript": "^5.9.3",
    "webextension-polyfill": "^0.12.0"
  },
  "publisher": "xicilion",
  "categories": [
    "Visualization",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:mermaid",
    "onLanguage:vega",
    "onLanguage:graphviz",
    "onLanguage:infographic",
    "onLanguage:xml"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mermaid",
        "aliases": [
          "Mermaid",
          "mermaid"
        ],
        "extensions": [
          ".mermaid",
          ".mmd"
        ],
        "icon": {
          "light": "icons/mermaid.svg",
          "dark": "icons/mermaid.svg"
        }
      },
      {
        "id": "vega",
        "aliases": [
          "Vega",
          "vega",
          "Vega-Lite",
          "vega-lite"
        ],
        "extensions": [
          ".vega",
          ".vl",
          ".vega-lite"
        ],
        "icon": {
          "light": "icons/vega.svg",
          "dark": "icons/vega.svg"
        }
      },
      {
        "id": "graphviz",
        "aliases": [
          "GraphViz",
          "graphviz",
          "DOT",
          "dot"
        ],
        "extensions": [
          ".gv",
          ".dot"
        ],
        "icon": {
          "light": "icons/graphviz.svg",
          "dark": "icons/graphviz.svg"
        }
      },
      {
        "id": "infographic",
        "aliases": [
          "Infographic",
          "infographic"
        ],
        "extensions": [
          ".infographic"
        ],
        "icon": {
          "light": "icons/infographic.svg",
          "dark": "icons/infographic.svg"
        }
      }
    ],
    "submenus": [
      {
        "id": "markdownViewer.toolsMenu",
        "label": "%toolsMenu.label%",
        "icon": "$(tools)"
      }
    ],
    "commands": [
      {
        "command": "markdownViewer.preview",
        "title": "Open Markdown Preview (Advanced)",
        "category": "Markdown Viewer",
        "icon": "$(go-to-file)"
      },
      {
        "command": "markdownViewer.previewToSide",
        "title": "Open Markdown Preview to the Side (Advanced)",
        "category": "Markdown Viewer",
        "icon": "$(go-to-file)"
      },
      {
        "command": "markdownViewer.exportDocx",
        "title": "Export to DOCX",
        "category": "Markdown Viewer",
        "icon": "$(save-as)"
      },
      {
        "command": "markdownViewer.openSettings",
        "title": "Open Settings",
        "category": "Markdown Viewer",
        "icon": "$(gear)"
      },
      {
        "command": "markdownViewer.refresh",
        "title": "Refresh Preview",
        "category": "Markdown Viewer",
        "icon": "$(refresh)"
      },
      {
        "command": "markdownViewer.tools.numberHeadings",
        "title": "%command.numberHeadings.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.removeHeadingNumbers",
        "title": "%command.removeHeadingNumbers.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.fixAll",
        "title": "%command.fixAll.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.fixWhitespace",
        "title": "%command.fixWhitespace.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.fixHeadings",
        "title": "%command.fixHeadings.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.fixLists",
        "title": "%command.fixLists.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.fixCode",
        "title": "%command.fixCode.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.fixLinks",
        "title": "%command.fixLinks.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.fixEmphasis",
        "title": "%command.fixEmphasis.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.fixTables",
        "title": "%command.fixTables.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.fixBlockquotes",
        "title": "%command.fixBlockquotes.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.fixProperNames",
        "title": "%command.fixProperNames.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.showDiagnostics",
        "title": "%command.showDiagnostics.title%",
        "category": "%category.markdownTools%"
      },
      {
        "command": "markdownViewer.tools.openSettings",
        "title": "%command.openSettings.title%",
        "category": "%category.markdownTools%",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "markdownViewer.toolsMenu": [
        {
          "command": "markdownViewer.tools.numberHeadings"
        },
        {
          "command": "markdownViewer.tools.removeHeadingNumbers"
        },
        {
          "command": "markdownViewer.tools.fixAll",
          "group": "fix"
        },
        {
          "command": "markdownViewer.tools.fixWhitespace",
          "group": "fix"
        },
        {
          "command": "markdownViewer.tools.fixHeadings",
          "group": "fix"
        },
        {
          "command": "markdownViewer.tools.fixLists",
          "group": "fix"
        },
        {
          "command": "markdownViewer.tools.fixCode",
          "group": "fix"
        },
        {
          "command": "markdownViewer.tools.fixLinks",
          "group": "fix"
        },
        {
          "command": "markdownViewer.tools.fixEmphasis",
          "group": "fix"
        },
        {
          "command": "markdownViewer.tools.fixTables",
          "group": "fix"
        },
        {
          "command": "markdownViewer.tools.fixBlockquotes",
          "group": "fix"
        },
        {
          "command": "markdownViewer.tools.fixProperNames",
          "group": "fix"
        },
        {
          "command": "markdownViewer.tools.showDiagnostics",
          "group": "diagnostics"
        },
        {
          "command": "markdownViewer.tools.openSettings"
        }
      ],
      "editor/title": [
        {
          "submenu": "markdownViewer.toolsMenu",
          "when": "editorLangId == markdown",
          "group": "navigation@0"
        },
        {
          "command": "markdownViewer.previewToSide",
          "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic",
          "group": "navigation"
        },
        {
          "command": "markdownViewer.exportDocx",
          "when": "activeWebviewPanelId == markdownViewerAdvanced",
          "group": "navigation@1"
        },
        {
          "command": "markdownViewer.openSettings",
          "when": "activeWebviewPanelId == markdownViewerAdvanced",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "command": "markdownViewer.preview",
          "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "markdownViewer.preview",
          "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic"
        },
        {
          "command": "markdownViewer.previewToSide",
          "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic"
        },
        {
          "command": "markdownViewer.exportDocx",
          "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Viewer",
      "properties": {
        "markdownViewer.theme": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "github-light",
            "github-dark",
            "academic",
            "minimal"
          ],
          "description": "Theme for the Markdown preview"
        },
        "markdownViewer.fontSize": {
          "type": "number",
          "default": 16,
          "minimum": 10,
          "maximum": 32,
          "description": "Base font size in pixels"
        },
        "markdownViewer.fontFamily": {
          "type": "string",
          "default": "",
          "description": "Font family for the preview (leave empty for default)"
        },
        "markdownViewer.lineNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Show line numbers in code blocks"
        },
        "markdownViewer.scrollSync": {
          "type": "boolean",
          "default": true,
          "description": "Synchronize scrolling between editor and preview"
        },
        "markdownViewer.markdownViewerSettings": {
          "type": "object",
          "default": {},
          "description": "Internal settings storage for Markdown Viewer (managed by the extension)"
        },
        "markdownViewer.selectedTheme": {
          "type": "string",
          "default": "default",
          "description": "Selected theme identifier"
        },
        "markdownViewer.markdownHistory": {
          "type": "array",
          "default": [],
          "description": "Recent file history"
        }
      }
    },
    "keybindings": [
      {
        "command": "markdownViewer.previewToSide",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "editorLangId == markdown || editorLangId == mermaid || editorLangId == vega || editorLangId == graphviz || editorLangId == infographic || resourceExtname == .svg"
      }
    ]
  },
  "icon": "icons/icon128.png"
}
